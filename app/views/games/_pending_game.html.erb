    </div>

  <div class="user-pending">
    <div class="item-playeur">
      <div class="current-avatar">
        <% if current_user.photo.key? %>
              <%= cl_image_tag current_user.photo.key, crop: :fill %>
        <% end %>
      </div>
      <span><h2 style="color:#CE001D !important"><%= current_user.nickname %></h2></span>
    </div>
    <h1 class="vs fight-catchline" data-pending-target="vs">VS</h1>
