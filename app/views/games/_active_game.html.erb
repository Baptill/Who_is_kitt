<div class="d-flex flex-column mb-3 active-modal ">
<h2>Choisis la carte a faire deviner</h2>
  <div class="container game">

  <div class="player-one-deck container text-center">
    <div class="card-tray">
      <% @player_one_cards.shuffle.each do |card| %>
        <% if card.active == true %>
        <div class= "card">
          <%= cl_image_tag card.character.photo.key, width: 103, height: 190, crop: :fill %>
          <%= card.character.name %>
        </div>
        <% else %>
          <%= cl_image_tag card.character.photo.key, width: 103, height: 190, crop: :fill, class: "disactive-card radius" %>
        <% end %>
        <div><%= card.guess%> </div>
        <div style="font-size:12px; margin:0"><% if card.active == true %><% else %><% end %> </div>
      <% end %>
    </div>
  </div>
</div>
