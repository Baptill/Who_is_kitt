<div class="container d-flex flex-column justify-content-center align-items-center height100vh pending-screen">

  <div class="fight-action fight-image" style="z-index:1000"></div>

  <div class="d-flex flex-column mb-3 active-modal active-view ">
    <% if @current_user.id == @player_one.user_id %>
   <h1 class="size70 mb-3">Le joueur 2 a rejoint la partie !</h1>

    <% else %>
    <h1 class="size70 mb-3">Bienvenue <%= current_user.nickname %></h1>
    <% end %>

       <div class="finished-game">Choisis la carte Ã  faire deviner</div>
        <div class="container game">
          <div class="<% if @current_user.id == @player_one.user_id  %>card-tray <% else %>card-tray-yellow <% end %>w-100 card-tray-active-game">
              <% current_user.active_player(@game).cards.each do |card| %>
              <div class= "cardbuzzer">
                <%= link_to select_character_game_path(game: @game, id: card.id), data: {turbo_method: :patch} do %>
              <% if card.guess == true %>
                  <%= cl_image_tag card.character.photo.key, width: 96, height: 190, crop: :fill, class:"card-selected"  %>
              <% else %>
                  <%= cl_image_tag card.character.photo.key, width: 96, height: 190, crop: :fill, class:"" %>
              <% end %>
            <% end %>
              </div>
          <% end %>
        </div>
      </div>

  </div>
</div>
