<p> Statut du jeu : <%= @game.status %> </p>

<div class="player-one-deck container text-center">
  <h2>Plateau du joueur 1</h2>
  <div class="row">
    <% @game.players[0].cards.each do |card| %>
      <div class="col-1">
      <div><%= cl_image_tag card.character.photo.key, width: 103, height: 190, crop: :fill %> </div>
      <div><%= card.character.name%> </div>
      </div>
    <% end %>
  </div>
</div>

<div class="player-two-deck container mt-5 text-center">
  <h2>Plateau du joueur 2</h2>
  <div class="row">
    <% @game.players[1].cards.each do |card| %>
      <div class="col-1">
      <div><%= cl_image_tag card.character.photo.key, width: 103, height: 190, crop: :fill %> </div>
      <div><%= card.character.name%> </div>
      </div>
    <% end %>
  </div>
</div>
