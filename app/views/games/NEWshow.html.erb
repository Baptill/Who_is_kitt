<%# DEBUT LOGO %>
<%# <%= render "shared/logo" %>
<%# FIN LOGO %>

<%# DEBUT DU BG %>
<div class="d-flex flex-column active-modal" data-controller="game-logic">

  <div class="d-flex justify-content-between">
    <div class="d-flex">
      <% if current_user.photo.key? %>
      <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar-bordered dropdown-toggle imgbig", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
    </div>
    <div class="d-flex flex-column">
      <div class="d-flex">
        <div class="round-time-bar animate-timer" data-game-logic-target="timeBar">
          <div></div>
        </div>
      </div>
      <div class="d-flex">
        <%=  @player_one.user.nickname  %>
      </div>
    </div>
    <div class="d-flex">
      <% if current_user.photo.key? %>
      <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar-bordered dropdown-toggle imgbig", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
    </div>
  </div>


  <%# DEBUT PLATEAU JEU %>
  <div class="player-one-deck container text-center">
      <div class="card-tray">
        <% @player_one_cards.shuffle.each do |card| %>
          <% if card.active == true %>
          <div class= "card">
            <%= cl_image_tag card.character.photo.key, width: 103, height: 190, crop: :fill %>
            <%= card.character.name %>
          </div>
          <% else %>
            <%= cl_image_tag card.character.photo.key, width: 103, height: 190, crop: :fill, class: "disactive-card radius" %>
          <% end %>
          <div><%= card.guess%> </div>
          <div style="font-size:12px; margin:0"><% if card.active == true %><% else %><% end %> </div>
        <% end %>
      </div>
    </div>
  </div>
  <%# FIN DU PLATEAU JEU %>
</div>
<%# FIN DU BG %>
